<%- include('partials/header') %>

<main>
    <div class="gallery-page">
        <h1 class="gallery-title" data-aos="fade-up"><%- siteContent.gallery.headerTitle %></h1>
        <p class="text-center" data-aos="fade-up" data-aos-delay="100"><%- siteContent.gallery.headerSubtitle %></p>

        <div class="galerie" data-aos="fade-up" data-aos-delay="200">
          <% siteContent.gallery.images.forEach(image => { %>
            <div class="item">
              <a href="<%= image.url %>" class="modal-link">
                <img src="<%= image.url %>" alt="<%= image.alt %>">
              </a>
            </div>
          <% }) %>
        </div>
        
        <div id="modal" class="modal">
            <span class="close">&times;</span>
            <img class="modal-content" id="modal-image">
        </div>
    </div>
</main>

<%- include('partials/footer') %>